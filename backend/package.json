{
  "name": "backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "prisma:generate": "npm run prisma:combine && prisma generate",
    "prisma:migrate": "npm run prisma:combine && prisma migrate dev",
    "prisma:studio": "npm run prisma:combine && prisma studio",
    "prisma:combine": "cat prisma/parts/*.prisma > prisma/schema.prisma",
    "build": "npm run prisma:generate && nest build",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.4",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.4",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.4",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.12.0",
    "@types/helmet": "^0.0.48",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "eslint": "^9.32.0",
    "helmet": "^8.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.14",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
